---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="flex items-center justify-center min-h-screen">
		<div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 text-center" role="alert">
			<span class="font-medium">We got a 404 code... That's weird</span> 
			<br />Try checking the spelling or going back!
			<br />
			<a href="/" class="inline-flex items-center justify-center gap-1 mt-4 text-red-800 hover:underline dark:text-red-400 transition">
				<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12l4-4m-4 4 4 4"/>
				</svg>
				Go to main page
			</a>
		</div>
	</div>
</Layout>
